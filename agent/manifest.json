{
  "manifest_version": 2,
  "name": "JSON Stringify Modifier",
  "version": "1.0",
  "description": "Modifie JSON.stringify pour intercepter et remplacer colors et coords",
  "permissions": [
    "storage",
    "activeTab",
    "https://backend.wplace.live/*",
    "http://127.0.0.1:5000/*",
    "http://localhost:5000/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "JSON Stringify Modifier"
  },
  "web_accessible_resources": ["content.js"]
}