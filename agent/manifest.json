{
  "manifest_version": 2,
  "name": "Agent WPlace",
  "version": "1.0",
  "description": "Agent WPlace: intercepter et remplacer colors et coords",
  "icons": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "64": "icons/icon-64.png",
      "128": "icons/icon-128.png",
      "256": "icons/icon-256.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "https://backend.wplace.live/*",
    "http://127.0.0.1:5000/*",
    "http://localhost:5000/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "web_accessible_resources": ["content.js"]
}